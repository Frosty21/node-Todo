<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}} <span class="badge">{{priority}}</span></h3>
  </div>
  <div class="panel-body">
    {{description}}
  </div>
  <div class="panel-footer">{{date}}</div>
</div>
<div>
  <form action="/todo/{{id}}?_method=DELETE" method="post">
  <a type="button" class="btn btn-default btn-warning" href="/todo/{{id}}/edit">
    Edit Todo
  </a>
    <button type="submit" class="btn btn-default btn-danger">
      Delete Todo
    </button>
  <a type="button" class="btn btn-default btn-primary" href="/todo/">
    Back to Todo
  </a>
  </form>
</div>